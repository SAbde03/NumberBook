<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bordure du bas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <size android:height="0.5dp" />
        </shape>
